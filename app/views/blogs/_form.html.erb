<%= form_with model: @blog do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title, class:"form-control", required: true %>
  </div>

  <div class="mt-3">
    <%= form.label :content %>
    <%= form.text_area :content, rows: "5", class:"form-control", required: true %>
  </div>

  <div class="mt-3">
    <%= form.label :summary %>
    <%= form.text_area :summary, rows: "2", class:"form-control" %>
  </div>

  <div class="mt-3">
    <%= form.label :state %>
    <%= form.select :state, options_for_select(['draft', 'published'], @blog.state), {}, { class: "form-control" } %>
  </div>

  <div class="mt-3 text-center">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>